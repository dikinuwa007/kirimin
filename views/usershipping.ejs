<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=tab, initial-scale=1.0">
    <title>Shipping Status</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <div class="btn-group d-flex justify-content-center"  role="group">
        <button onclick="document.location.href='/user/<%= idProfile %>/shipping?status=true'" type="button" class="btn btn-dark">Receive</button>
        <button onclick="document.location.href='/user/<%= idProfile %>/shipping?status=false'" type="button" class="btn btn-dark">on Delivery</button>
        <button onclick="document.location.href='/user/<%= idProfile %>/shipping/add'" type="button" class="btn btn-dark">Add Shipping</button>
    </div>
</head>
<body>
  
   
    <!-- <a href="/user/:iduser/shipping/add">Add shipping</a> -->
   
    <table border="1">
        <tr style="text-align:center;">
            <th>destination</th>
            <th>estArrival</th>
            <th>createdAt</th>
            <th>item</th>
            <!-- <th>price</th>
            <th>description</th> -->
            <th>status</th>
            <th>invoice</th>
        </tr>

        <% data.forEach(e => { %>
        <tr>
            <td><%= e.destination %></td>
            <td><%= formatDate(e.estArrival) %></td>
            <td><%= formatDate(e.createdAt) %></td>
            <td>
            <% e.ShippedItems.forEach(element => { %>
            <!-- <tr> -->
            <%= element.Item.name %>
            <%= element.Item.formattedRupiah %>
            <%= element.Item.description %>||
            <!-- </tr> -->
            <% }) %>
            </td>
            <td><%= e.statusReceive %></td>
            <td><a href="/user/<%= idProfile %>/shipping/cetakInvoice/<%= e.id %>">Cetak</a></td>
        </tr>
        <% }) %>
    </table>

    <button onclick="document.location.href='/logout'" type="button" class="btn btn-dark fixed-bottom">LOG OUT</button>
</body>
</html>